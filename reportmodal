// Add event listeners for Contrast Verification dropdown and Description save button
document.querySelectorAll('.contrast-verification-dropdown').forEach(dropdown => {
    dropdown.addEventListener('change', async () => {
        const engagementId = dropdown.dataset.id;
        const newValue = dropdown.value;
        await updateEngagement(engagementId, { reason: newValue }, engagement.name);
        showAlert("Contrast Verification Saved", "success", engagement.name);
    });
});

document.querySelectorAll('.save-description-btn').forEach(button => {
    button.addEventListener('click', async () => {
        const engagementId = button.dataset.id;
        const textarea = document.querySelector(`.engagement-description-textarea[data-id="${engagementId}"]`);
        const newDescription = textarea.value;
        await updateEngagement(engagementId, { description: newDescription }, engagement.name);
        showAlert("Description Saved", "success", engagement.name);
    });
});

// Function to update engagement via API
async function updateEngagement(engagementId, payload, engagementName) {
    try {
        const response = await fetch(`${BASE_URL}/engagements/${engagementId}/`, {
            method: "PATCH",
            headers: { 
                "Content-Type": "application/json", 
                "X-CSRFToken": csrfToken 
            },
            body: JSON.stringify(payload),
            credentials: "include"
        });

        if (response.ok) {
            console.log(`Updated engagement ${engagementId} with ${JSON.stringify(payload)}`);
            // Update local engagement object to reflect changes
            const engagement = openEngagements.find(eng => eng.id == engagementId);
            Object.assign(engagement, payload);
        } else {
            showAlert(`Failed to update engagement ${engagementId}!`, "danger");
        }
    } catch (error) {
        showAlert("Error updating engagement!", "danger");
        console.error("Error:", error);
    }
}